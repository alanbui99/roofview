<% if((successFlash && successFlash.length > 0) || (errorFlash &&
errorFlash.length > 0) ) { %>
<div
  class="position-fixed bottom-0 right-0 p-3"
  style="z-index: 5; right: 0; bottom: 0"
>
  <div
    class="toast"
    role="alert"
    aria-live="assertive"
    aria-atomic="true"
    data-delay="5000"
    style="min-width: 18rem;"
  >
    <div class="toast-header">
      <% if (successFlash.length > 0) { %>
      <i class="fas fa-check-circle text-info mr-2"></i>
      <% } else { %>
      <i class="fas fa-exclamation-circle text-danger mr-2"></i>
      <% } %>
      <strong class="mr-auto">Roofview</strong>
      <button
        type="button"
        class="ml-2 mb-1 close"
        data-dismiss="toast"
        aria-label="Close"
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body">
      <div style="font-size: 1.25em;" class="font-weight-bold <%= successFlash.length > 0 ? 'text-info' : 'text-danger' %>"><%= successFlash.length > 0 ? successFlash : errorFlash %></div>
    </div>
  </div>
</div>

<script>
  $(".toast").toast("show");
</script>
<% } %>
