<%- include("partials/header") %>

<section class="container py-5">
    <div class="row">
        <div class="col"></div>
        <div class="col-sm-7 col-md-6 col-lg-5">
            <div class="card shadow border-0">
                <div class="card-body">
                    <form
                        action="/register"
                        method="POST"
                        novalidate
                        class="needs-validation"
                    >
                        <p class="h3 text-center mb-2">Sign Up for Roofview</p>
                        <div class="form-group">
                            <div class="row">
                                <div class="col">
                                    <input
                                        type="text"
                                        class="form-control"
                                        name="firstName"
                                        placeholder="First Name"
                                        value="<%= invalidSignup ? invalidSignup.firstName : '' %>"
                                        required
                                    />
                                </div>
                                <div class="col">
                                    <input
                                        type="text"
                                        class="form-control"
                                        name="lastName"
                                        placeholder="Last Name"
                                        value="<%= invalidSignup ? invalidSignup.lastName : '' %>"
                                        required
                                    />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input
                                type="email"
                                class="form-control"
                                name="email"
                                placeholder="Email"
                                value="<%= invalidSignup ? invalidSignup.email : '' %>"
                                required
                            />
                        </div>
                        <div class="form-group">
                            <input
                                type="password"
                                class="form-control"
                                name="password"
                                placeholder="Password"
                                required
                            />
                        </div>
                        <div class="form-group">
                            <input
                                type="password"
                                class="form-control"
                                name="confirmPassword"
                                placeholder="Confirm Password"
                                required
                            />
                        </div>
                        <% if (invalidSignup) { %>
                        <p class="text-danger">
                            <%= invalidSignup.error %>
                        </p>
                        <% } %>
                        <div class="form-group">
                            <button class="btn btn-info btn-block">
                                Sign Up
                            </button>
                        </div>
                    </form>
                    <div class="mt-3 text-muted text-center">
                        <small>
                            Already have an account?
                            <a href="/login">Login</a>
                        </small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col"></div>
    </div>
</section>
<%- include("partials/footer") %>
